{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "paths": {
      "@shared": ["../shared"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "../shared"],
  "exclude": ["node_modules"]
}
