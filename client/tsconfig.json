{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "@shared": ["../shared"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "../shared"],
  "exclude": ["node_modules"]
}
